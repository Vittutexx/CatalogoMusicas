@model IEnumerable<CatalogoMusicas.Models.Podcast>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Meus Podcasts</h1>

<p>
    <a asp-action="Create">Inserir Podcast</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalReproducoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCurtidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classificacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Host)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalReproducoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCurtidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPodcast">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPodcast">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPodcast">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
