@model IEnumerable<CatalogoMusicas.Models.Musica>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Minhas Músicas</h1>

<p>
    <a asp-action="Create">Inserir Música</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalReproducoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCurtidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classificacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalReproducoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCurtidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMusica">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdMusica">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMusica">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
